<div class="container"> 
  <%= render 'shared/flash_messages' %> 
  <h1 class="dashboard">Dashboard</h1> 
  <div class="content-area"> 
    <div class="canvases-main">
      <a href="#myModal" class="new btn btn-info" data-toggle="modal">Create new</a> 
        <div class="modal hide fade" id="myModal">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">x</button>
            <h3>Please enter a name.</h3>
          </div>
          <div class="modal-body">
            <input class="new" type="text"></input>
          </div>
          <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="save btn btn-info">Save</a>
          </div>
        </div>
      <h3 class="header">Your Canvases</h3> 
      <% if @canvases.empty? %> 
        <div class="canvases"> 
          <p class="notice">There are no existing canvases owned by you. Create one now to get started.</p> 
        </div> 
      <% else %> 
        <div class="canvases"> 
          <ol> 
            <% @canvases.each do |canvas| %> 
              <div class="canvas" data-id="<%= canvas.id %>" data-name="<%= canvas.name %>" >
                <div class="canvas-info">
                  <li class="edit"><%= link_to canvas.name, [@user, canvas] %></li>
                  <p>Last updated - <%= time_ago_in_words canvas.updated_at %> ago</p> 
                </div> 
                <div class="canvas-options">
                  <ul>
                    <li><a href='#' class="edit"><i class="icon-edit"></i>Edit Name</a></li>
                    <li><a href='#' class="delete"><i class="icon-remove"></i>Delete Canvas</a></li>
                    <li><a href='#'><i class="icon-plus"></i>Add Collaborators</a></li>
                  </ul>
                </div> 
              </div>
            <% end %> 
          </ol> 
        </div> 
      <% end %> 
      <h3 class="header">Shared Canvases</h3> 
      <div class="canvases2">
        <p class="notice">You don't have any canvases shared with you currently.<p/> 
      </div> 
      <div class="feeds">
        <h3 class="header">Activity Feeds</h3>
      </div>
    </div> 
  </div> 
</div> 
