<div class="container"> 
  <%= render 'shared/flash_messages' %> 
  <h1 class="dashboard">Dashboard</h1> 
  <div class="content-area"> 
    <div class="canvases-main">
      <a href="#" class="btn btn-info">Create new</a> 
      <h3>Your Canvases</h3> 
      <% if @canvases.empty? %> 
        <div class="canvases"> 
          <p class="notice">There are no existing canvases owned by you. Create one now to get started.</p> 
          <%= link_to "Create Canvas", '#', class: "btn btn-info" %> 
        </div> 
      <% else %> 
        <div class="canvases"> 
          <ol> 
            <% @canvases.each do |canvas| %> 
              <div class="canvas">
                <div class="canvas-info">
                  <li><%= canvas.name %></li>
                  <p>Last updated - <%= time_ago_in_words canvas.updated_at %> ago</p> 
                </div> 
                <div class="canvas-options">
                  <ul>
                    <li><i class="icon-edit"></i>Edit Name</li>
                    <li><i class="icon-remove"></i>Delete Canvas</li>
                    <li><i class="icon-plus"></i>Add Collaborators</li>
                  </ul>
                </div> 
              </div>
            <% end %> 
          </ol> 
        </div> 
      <% end %> 
      <h3>Shared Canvases</h3> 
      <div class="canvases">
        <p class="notice">You don't have any canvases shared with you currently.<p/> 
      </div> 
      <div class="feeds">
        <h3>Activity Feeds</h3>
      </div>
    </div> 
  </div> 
</div> 
