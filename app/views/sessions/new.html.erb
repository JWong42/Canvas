<div class="container">
  <div class="row">
    <div class="form span6">
      <%= render 'shared/flash_messages' %>
      <h1 class="form">Sign In</h1>
      <div id="signin">
        <%= form_tag({action: 'create'}, class: 'new_session') do |f| %>

          <%= label_tag :email %>
          <%= text_field_tag :email %>

          <%= label_tag :password %>
          <%= password_field_tag :password %>

          <%= submit_tag "Sign in", class: "btn btn-info" %>

          <p id="signup">New user? <%= link_to "Sign up now!", signup_path %></p> 

        <% end %>
      </div>
    </div>
  </div>
</div>

